<p id="notice"><%= notice %></p>

<h1>Mascota</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Raza</th>
      <th>Cumpleaños</th>
      <th>Visitas</th>
      <th>Historial</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.birthdate %></td>
        <td><%= pet.history_count%></td>
        <td><% pet.pet_histories.each do |pet_history|%>
          <span><%= pet_history.created_at %>  > <%= pet_history.description%></span><br/>
            <%end%>
        </td>
      
        <td><%= link_to 'Mostrar', client_pet_path(pet.client, pet) %></td>
        <td><%= link_to 'Editar', edit_client_pet_path(pet.client, pet)  %></td>
        <td><%= link_to 'Borrar', client_pet_path(pet.client, pet), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva mascota', new_client_pet_path(@client) %>
