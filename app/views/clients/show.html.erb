<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @client.name %>
</p>

<p>
  <strong>Teléfono:</strong>
  <%= @client.phone %>
</p>

<p>
  <strong>E-mail:</strong>
  <%= @client.email %>
</p>

<hr/>
<h2>Mascotas</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Altura Máxima</th>
      <th>Peso Máximo</th>
    </tr>
  </thead>

  <tbody>
    <% @client.pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.max_height %></td>
        <td><%= pet.max_weight %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<hr/>

<%= link_to 'Editar', edit_client_path(@client) %> |
<%= link_to 'Volver', clients_path %>
